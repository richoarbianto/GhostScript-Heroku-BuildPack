#!/bin/sh

BUILD_DIR=$1

echo "Installing Ghostscript..."
curl -fsSL https://github.com/ArtifexSoftware/ghostpdl-downloads/releases/download/gs10031/ghostpdl-10.03.1.tar.gz | tar -xz -C /tmp
mkdir -p $BUILD_DIR/ghostscript
cp -r /tmp/ghostpdl-10.03.1/* $BUILD_DIR/ghostscript/

echo "Ghostscript installation completed."
